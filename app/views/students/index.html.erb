<p id="notice"><%= notice %></p>

<h1>Students</h1>

<div class = 'row'>

    <% @students.each do |student| %>

    <div class = 'col-md-3'>

      <div class="panel panel-primary">

        <div class="panel-heading"><%= student.name %></div>

        <div class = 'panel-body'>



        
        <%= student.age %>
        <%= student.sex %>

        <br>
        <br>

        <div class="btn-group btn-group-xs" role="group" aria-label="...">
          <%= link_to 'Show', student, class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_student_path(student), class: 'btn btn-primary' %>
          <%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </div>

        </div>
        
      </div>
    </div>

    <% end %>

</div>

<br>

<%= link_to 'New Student', new_student_path %>

